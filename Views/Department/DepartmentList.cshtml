@section Scripts {
    <script>
        document.getElementById('deptSearch').addEventListener('keyup', function() {
            var input = this.value.toLowerCase();
            // Select only data rows, excluding the 'noDeptRow'
            var rows = document.querySelectorAll('#deptTable tbody tr:not(#noDeptRow)');
            var noRow = document.getElementById('noDeptRow');
            var visibleCount = 0;

            rows.forEach(function(row) {
                // Targeting the 2nd column (index 1) which is Department Name
                var text = row.cells[1].textContent.toLowerCase();
                if(text.includes(input)){
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });

            // Toggle empty state row
            if (visibleCount === 0) {
                noRow.style.display = 'table-row';
            } else {
                noRow.style.display = 'none';
            }
        });
    </script>
}