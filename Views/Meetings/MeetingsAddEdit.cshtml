@model Meeting_Of_Minutes.Models.MeetingsModel

@{
    ViewData["Title"] = "Schedule New Meeting";
}

<div class="container-fluid mt-4">
    <div class="mb-4">
        <h4 class="fw-bold">Schedule New Meeting</h4>
        <p class="text-muted mb-0">Create and schedule a new organizational meeting</p>
    </div>

    <div class="card border-0 shadow-sm col-lg-8 mx-auto" style="border-radius:14px;">
        <!-- Header -->
        <div class="card-header text-white border-0"
             style="background:linear-gradient(90deg,#6a6fdc,#7b5be6);border-radius:14px 14px 0 0;">
            <i class="bi bi-calendar-plus me-2"></i> Schedule New Meeting
        </div>

        <div class="card-body p-4">
            <form asp-action="Save" method="post" enctype="multipart/form-data" class="row g-4">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                </div>

                <!-- Meeting Type -->
                <div class="col-md-6">
                    <label class="form-label small fw-semibold">Meeting Type</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-tags"></i>
                        </span>
                        <select asp-for="MeetingTypeID" class="form-select">
                            <option value="">-- Select Meeting Type --</option>
                            <option value="1">Board Meeting</option>
                            <option value="2">Internal Meeting</option>
                        </select>
                    </div>
                    <span asp-validation-for="MeetingTypeID" class="text-danger small"></span>
                </div>

                <!-- Department -->
                <div class="col-md-6">
                    <label class="form-label small fw-semibold">Department</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-building"></i>
                        </span>
                        <select asp-for="DepartmentID" class="form-select">
                            <option value="">-- Select Department --</option>
                            <option value="1">IT Support</option>
                            <option value="2">HR</option>
                        </select>
                    </div>
                    <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                </div>

                <!-- Venue -->
                <div class="col-md-6">
                    <label class="form-label small fw-semibold">Venue</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-geo-alt"></i>
                        </span>
                        <select asp-for="MeetingVenueID" class="form-select">
                            <option value="">-- Select Venue --</option>
                            <option value="1">Conference Room 1</option>
                            <option value="2">Conference Room 2</option>
                        </select>
                    </div>
                    <span asp-validation-for="MeetingVenueID" class="text-danger small"></span>
                </div>

                <!-- Meeting Date -->
                <div class="col-md-6">
                    <label class="form-label small fw-semibold">Meeting Date & Time</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-calendar-event"></i>
                        </span>
                        <input asp-for="MeetingDate" type="datetime-local" class="form-control" />
                    </div>
                    <span asp-validation-for="MeetingDate" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label class="form-label small fw-semibold">Meeting Description</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white align-items-start">
                            <i class="bi bi-text-paragraph mt-1"></i>
                        </span>
                        <textarea asp-for="MeetingDescription"
                                  class="form-control"
                                  rows="3"
                                  maxlength="250"
                                  placeholder="Enter meeting description and agenda"></textarea>
                    </div>
                    <span asp-validation-for="MeetingDescription" class="text-danger small"></span>
                </div>

                <!-- Document -->
                <div class="col-12">
                    <label class="form-label small fw-semibold">
                        Meeting Document <span class="text-muted">(Optional)</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-paperclip"></i>
                        </span>
                        <input type="file" name="MeetingDocument" class="form-control" />
                    </div>
                    <small class="text-muted">
                        PDF, DOC, DOCX, TXT – Max 5MB
                    </small>
                </div>


                <!-- Guidelines -->
                <div class="col-12">
                    <div class="p-3 rounded-3" style="background:#dff3f7;">
                        <h6 class="fw-semibold mb-2">
                            <i class="bi bi-info-circle me-1"></i> Meeting Guidelines
                        </h6>
                        <ul class="small mb-0 ps-3">
                            <li>Ensure venue availability</li>
                            <li>Add clear meeting agenda</li>
                            <li>Upload documents beforehand</li>
                            <li>Consider participants availability</li>
                        </ul>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex justify-content-between mt-3">
                    <a asp-action="MeetingsList" class="btn btn-link text-decoration-none">
                        ← Back to Meetings
                    </a>

                    <button type="submit"
                            class="btn text-white px-4"
                            style="background:#4f46e5;border-radius:10px;">
                        <i class="bi bi-check-circle me-1"></i> Schedule Meeting
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
