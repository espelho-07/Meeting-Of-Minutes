                border-radius:16px 16px 0 0;">
        <div class="fw-semibold">
            <i class="bi bi-people me-2"></i> Attendance Information
        </div>

        <a href="#" class="btn btn-sm btn-light">
            <i class="bi bi-pencil-square"></i> Manage Attendance
        </a>
    </div>

    <div class="card-body">

        <!-- SUMMARY CARDS -->
        <div class="row text-center mb-4">
            <div class="col-md-4">
                <div class="p-3 border rounded shadow-sm">
                    <h4 class="fw-bold text-primary">3</h4>
                    <small class="text-muted">Total Participants</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded shadow-sm">
                    <h4 class="fw-bold text-success">2</h4>
                    <small class="text-muted">Present</small>
                </div>
            </div>
            <div class="col-md-4">
