@{
    ViewData["Title"] = "Meeting Details - Meeting Of Minutes";
}
<div class="pagetitle mb-4">
    <h1>Meeting Details</h1>
    <nav>
        <ol class="breadcrumb flex-nowrap">
            <li class="breadcrumb-item">
                <a asp-controller="DashBoard" asp-action="DashBoard">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Meetings" asp-action="MeetingsList">Meetings</a>
            </li>
            <li class="breadcrumb-item active">Meeting Details</li>
        </ol>
    </nav>
</div>
<!-- PAGE TITLE -->
<div class="pagetitle mb-4">
    <h1>Meeting Details</h1>
    <p class="text-muted">View detailed information about this meeting</p>
</div>

<!-- MEETING DETAILS CARD -->
<div class="card border-0 shadow-sm mb-4" style="border-radius:16px;">
    <div class="card-header d-flex justify-content-between align-items-center text-white"
         style="background:linear-gradient(90deg,#6a5ae0,#7f6ae6);
                border-radius:16px 16px 0 0;">
        <div class="fw-semibold">
            <i class="bi bi-calendar-event me-2"></i> Meeting Details
        </div>

        <div>
            <a href="#" class="btn btn-sm btn-outline-warning me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="#" class="btn btn-sm btn-outline-danger">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="row gy-3">

            <div class="col-md-6">
                <strong>Meeting ID:</strong>
                <div class="text-muted">15</div>
            </div>

            <div class="col-md-6">
                <strong>Venue:</strong>
                <div class="text-muted">Board Room</div>
            </div>

            <div class="col-md-6">
                <strong>Date & Time:</strong>
                <div class="text-muted">December 31, 2025 at 13:13</div>
            </div>

            <div class="col-md-6">
                <strong>Status:</strong><br />
                <span class="badge bg-success">Completed</span>
            </div>

            <div class="col-md-6">
                <strong>Meeting Type:</strong><br />
                <span class="badge bg-info">Board Meeting</span>
            </div>

            <div class="col-md-6">
                <strong>Department:</strong>
                <div class="text-muted">Finance</div>
            </div>

            <div class="col-md-6">
                <strong>Created:</strong>
                <div class="text-muted">Dec 30, 2025 13:13</div>
            </div>

            <div class="col-md-6">
                <strong>Modified:</strong>
                <div class="text-muted">Dec 30, 2025 13:13</div>
            </div>

            <div class="col-12">
                <strong>Meeting Description:</strong>
                <div class="border rounded p-3 mt-1 text-muted bg-light">
                    High-level strategy discussion for upcoming quarter.
                </div>
            </div>

        </div>
    </div>
</div>

<!-- ATTENDANCE INFORMATION -->
