@{
    ViewData["Title"] = "Meetings Management - MOM";
}

<!-- PAGE TITLE -->
<div class="pagetitle mb-4">
    <h1>Meetings</h1>
    <nav>
        <ol class="breadcrumb flex-nowrap">
            <li class="breadcrumb-item">
                <a asp-controller="DashBoard" asp-action="DashBoard">Home</a>
            </li>
            <li class="breadcrumb-item active">Meetings</li>
        </ol>
    </nav>
</div>

<!-- PAGE HEADER -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h5 class="fw-bold mb-1">Meetings Management</h5>
        <p class="text-muted mb-0">
            Schedule and manage organizational meetings
        </p>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="MeetingsAddEdit"
           class="btn btn-primary rounded-pill px-4 shadow-sm"
           style="background:#5a52e0;border:none;">
            <i class="bi bi-plus-circle me-2"></i> Schedule Meeting
        </a>

        <button class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="bi bi-file-earmark-excel me-2"></i> Export
        </button>
    </div>
</div>

<!-- SEARCH & FILTER -->
<div class="card border-0 shadow-sm mb-4" style="border-radius:15px;">
    <div class="card-header text-white"
         style="background:linear-gradient(45deg,#5a52e0,#8965e0)">
        <i class="bi bi-funnel me-2"></i> Search & Filters
    </div>

    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label small fw-bold">Meeting Type</label>
                <select class="form-select rounded-3">
                    <option>All Types</option>
                    <option>Board Meeting</option>
                    <option>Brainstorming</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold">Department</label>
                <select class="form-select rounded-3">
                    <option>All Departments</option>
                    <option>Finance</option>
                    <option>Marketing</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold">Venue</label>
                <select class="form-select rounded-3">
                    <option>All Venues</option>
                    <option>Board Room</option>
                    <option>Zoom</option>
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold">Search</label>
                <input type="text"
                       class="form-control rounded-3"
                       placeholder="Search meetings..." />
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold">Start Date</label>
                <input type="date" class="form-control rounded-3" />
            </div>

            <div class="col-md-3">
                <label class="form-label small fw-bold">End Date</label>
                <input type="date" class="form-control rounded-3" />
            </div>

            <div class="col-md-6 d-flex align-items-end gap-2">
                <button class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-filter me-1"></i> Apply Filters
                </button>
                <button class="btn btn-light rounded-pill px-4">Clear</button>
            </div>
        </div>
    </div>
</div>

<!-- MEETINGS TABLE -->
<div class="card border-0 shadow-sm" style="border-radius:15px;">
    <div class="card-header text-white"
         style="background:linear-gradient(45deg,#5a52e0,#8965e0)">
        <i class="bi bi-calendar-event me-2"></i> Scheduled Meetings
    </div>

    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light small text-uppercase text-muted">
                <tr>
                    <th class="ps-4">#</th>
                    <th>Date & Time</th>
                    <th>Meeting Type</th>
                    <th>Description</th>
                    <th>Department</th>
                    <th>Venue</th>
                    <th>Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                <!-- ROW 1 -->
                <tr>
                    <td class="ps-4">15</td>
                    <td>
                        <div class="fw-bold">Dec 31, 2025</div>
                        <small class="text-muted">13:13</small>
                    </td>
                    <td><span class="badge bg-info">Board Meeting</span></td>
                    <td>High-level strategy</td>
                    <td>Finance</td>
                    <td>Board Room</td>
                    <td>
                        <span class="badge bg-success rounded-pill px-3">
                            Completed
                        </span>
                    </td>
                    <td class="text-center">
                        <!-- VIEW DETAILS -->
                        <a asp-controller="Meetings"
                           asp-action="MeetingsDetails"
                           asp-route-id="15"
                           class="btn btn-sm btn-light border rounded-pill me-1"
                           title="View Details">
                            <i class="bi bi-eye text-primary"></i>
                        </a>

                        <!-- ATTENDANCE -->
                        <a asp-controller="Attendance"
                           asp-action="AttendanceList"
                           asp-route-meetingId="15"
                           class="btn btn-sm btn-light border rounded-pill"
                           title="Attendance">
                            <i class="bi bi-people text-info"></i>
                        </a>
                    </td>
                </tr>

                <!-- ROW 2 -->
                <tr>
                    <td class="ps-4">14</td>
                    <td>
                        <div class="fw-bold">Nov 23, 2025</div>
                        <small class="text-muted">13:06</small>
                    </td>
                    <td><span class="badge bg-info">Board Meeting</span></td>
                    <td>No description</td>
                    <td>Customer Service</td>
                    <td>Auditorium</td>
                    <td>
                        <span class="badge bg-success rounded-pill px-3">
                            Completed
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-controller="Meetings"
                           asp-action="MeetingsDetails"
                           asp-route-id="14"
                           class="btn btn-sm btn-light border rounded-pill me-1">
                            <i class="bi bi-eye text-primary"></i>
                        </a>

                        <a asp-controller="Attendance"
                           asp-action="AttendanceList"
                           asp-route-meetingId="14"
                           class="btn btn-sm btn-light border rounded-pill">
                            <i class="bi bi-people text-info"></i>
                        </a>
                    </td>
                </tr>

                <!-- ROW 3 -->
                <tr>
                    <td class="ps-4">13</td>
                    <td>
                        <div class="fw-bold">Nov 21, 2025</div>
                        <small class="text-muted">23:06</small>
                    </td>
                    <td>
                        <span class="badge bg-warning text-dark">
                            Brainstorming
                        </span>
                    </td>
                    <td>Creative Campaign Ideas</td>
                    <td>Marketing</td>
                    <td>Zoom</td>
                    <td>
                        <span class="badge bg-success rounded-pill px-3">
                            Completed
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-controller="Meetings"
                           asp-action="MeetingDetails"
                           asp-route-id="13"
                           class="btn btn-sm btn-light border rounded-pill me-1">
                            <i class="bi bi-eye text-primary"></i>
                        </a>

                        <a asp-controller="Attendance"
                           asp-action="AttendanceList"
                           asp-route-meetingId="13"
                           class="btn btn-sm btn-light border rounded-pill">
                            <i class="bi bi-people text-info"></i>
                        </a>
                    </td>
                </tr>

                <!-- EMPTY STATE -->
                <tr style="display:none;">
                    <td colspan="8" class="text-center py-5 text-muted">
                        <i class="bi bi-emoji-frown fs-2 mb-2"></i>
                        <div class="fw-bold">No meetings found</div>
                        <small>Try adjusting filters</small>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
